{
  "manifest_version": 3,
  "name": "Taper Remote",
  "description": "Control the local Taper proxy from Chrome.",
  "version": "0.1.0",
  "permissions": [
    "commands"
  ],
  "host_permissions": [
    "http://127.0.0.1:5507/*",
    "http://localhost:5507/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "TaperRemote",
    "default_popup": "popup.html"
  },
  "commands": {
    "throttle_up": {
      "suggested_key": {
        "default": "Ctrl+Shift+Up"
      },
      "description": "Increase network quality"
    },
    "throttle_down": {
      "suggested_key": {
        "default": "Ctrl+Shift+Down"
      },
      "description": "Decrease network quality"
    }
  }
}
